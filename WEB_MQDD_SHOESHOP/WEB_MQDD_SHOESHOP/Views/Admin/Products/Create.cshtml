@model WEB_MQDD_SHOESHOP.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Thêm sản phẩm</div>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <!-- Cột trái -->
                        <div class="col-md-6">
                            <div class="form-group form-inline">
                                <input type="hidden" name="page" value="@ViewBag.CurrentPage" />
                                <label asp-for="Name" class="col-md-3 col-form-label">Tên sản phẩm</label>
                                <div class="col-md-9 p-0">
                                    <input type="text" class="form-control input-full" asp-for="Name" placeholder="Tên sản phẩm" required data-val="true" data-val-required="Tên sản phẩm không được để trống" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductCategoryId" class="col-form-label">Thể loại</label>
                                <select class="form-select form-control" asp-for="ProductCategoryId" asp-items="ViewBag.Category" required data-val="true" data-val-required="Thể loại không được để trống">
                                </select>
                                <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BrandId" class="col-form-label">Hãng</label>
                                <select class="form-select form-control" asp-for="BrandId" asp-items="ViewBag.Brand" required data-val="true" data-val-required="Hãng không được để trống">
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                            <div class="form-group form-inline">
                                <label asp-for="Description" class="col-md-3 col-form-label">Mô tả</label>
                                <div class="col-md-9 p-0">
                                    <textarea class="form-control" asp-for="Description" rows="5" placeholder="Mô tả" required data-val="true" data-val-required="Mô tả không được để trống"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group form-inline">
                                <label asp-for="Content" class="col-md-3 col-form-label">Tiêu đề</label>
                                <div class="col-md-9 p-0">
                                    <textarea class="form-control" asp-for="Content" rows="5" placeholder="Tiêu đề" required data-val="true" data-val-required="Tiêu đề không được để trống"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group form-inline">
                                <label asp-for="Tag" class="col-md-3 col-form-label">Tag</label>
                                <div class="col-md-9 p-0">
                                    <input type="text" class="form-control input-full" asp-for="Tag" placeholder="Tag" required data-val="true" data-val-required="Tag không được để trống" />
                                    <span asp-validation-for="Tag" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Cột phải -->
                        <div class="col-md-6">
                            <div class="form-group form-inline">
                                <label class="col-md-3 col-form-label">Giá tiền</label>
                                <div class="col-md-9 p-0">
                                    <input type="number" class="form-control input-full" name="Price" placeholder="Giá tiền" step="1" required data-val="true" data-val-required="Giá tiền không được để trống" data-val-number="Giá tiền phải là số" />
                                    <span class="text-danger" data-valmsg-for="Price" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="form-group form-inline">
                                <label class="col-md-3 col-form-label">Số lượng tồn kho</label>
                                <div class="col-md-9 p-0">
                                    <input type="number" class="form-control input-full" name="StockQuantity" placeholder="Số lượng tồn kho" required data-val="true" data-val-required="Số lượng tồn kho không được để trống" data-val-range="Số lượng tồn kho phải từ 0 trở lên" data-val-range-min="0" />
                                    <span class="text-danger" data-valmsg-for="StockQuantity" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Màu sắc</label>
                                <div class="row gutters-xs">
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="dark" class="colorinput-input" required data-val="true" data-val-required="Ít nhất một màu sắc phải được chọn" />
                                            <span class="colorinput-color bg-black"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="blue" class="colorinput-input" />
                                            <span class="colorinput-color bg-primary"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="white" class="colorinput-input" />
                                            <span class="colorinput-color" style="background-color: #ffffff; border: 1px solid #ccc;"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="pink" class="colorinput-input" />
                                            <span class="colorinput-color" style="background-color: #ff69b4;"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="gray" class="colorinput-input" />
                                            <span class="colorinput-color bg-secondary"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="black" class="colorinput-input" />
                                            <span class="colorinput-color bg-dark"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="brown" class="colorinput-input" />
                                            <span class="colorinput-color" style="background-color: #8b4513;"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="purple" class="colorinput-input" />
                                            <span class="colorinput-color bg-secondary"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="green" class="colorinput-input" />
                                            <span class="colorinput-color bg-success"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="red" class="colorinput-input" />
                                            <span class="colorinput-color bg-danger"></span>
                                        </label>
                                    </div>
                                    <div class="col-auto">
                                        <label class="colorinput">
                                            <input name="Colors" type="checkbox" value="yellow" class="colorinput-input" />
                                            <span class="colorinput-color bg-warning"></span>
                                        </label>
                                    </div>
                                </div>
                                <span class="text-danger" data-valmsg-for="Colors" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Size</label>
                                <div class="selectgroup w-100">
                                    @for (int size = 36; size <= 44; size++)
                                    {
                                        <label class="selectgroup-item">
                                            <input type="checkbox" name="Sizes" value="@size" class="selectgroup-input" required data-val="true" data-val-required="Ít nhất một size phải được chọn" />
                                            <span class="selectgroup-button">@size</span>
                                        </label>
                                    }
                                </div>
                                <span class="text-danger" data-valmsg-for="Sizes" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Chọn ảnh sản phẩm</label>
                                <input type="file" class="form-control-file" name="ImageUrl" required data-val="true" data-val-required="Ảnh sản phẩm không được để trống" />
                                <span class="text-danger" data-valmsg-for="ImageUrl" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <div class="text-danger">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                                <button type="submit" class="btn btn-primary">Thêm</button>
                                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}