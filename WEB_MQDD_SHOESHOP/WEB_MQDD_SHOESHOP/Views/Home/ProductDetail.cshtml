<!--================Single Product Area =================-->
<div class="product_image_area">
	<div class="container">
		<div class="row s_product_inner">
			<div class="col-lg-6">
				<div class="owl-carousel owl-theme s_Product_carousel">
					@{
						if (Model.ImagePaths != null && Model.ImagePaths.Any())
						{
							foreach (var image in Model.ImagePaths)
							{
								<div class="single-prd-item">
									<img class="img-fluid" src="@image" alt="">
								</div>
							}
						}
						else
						{
							<div class="single-prd-item">
								<img class="img-fluid" src="~/assets_2/img/home/hero-banner.jpg" alt="">
							</div>
						}
					}
					
					<!-- <div class="single-prd-item">
						<img class="img-fluid" src="img/category/s-p1.jpg" alt="">
					</div>
					<div class="single-prd-item">
						<img class="img-fluid" src="img/category/s-p1.jpg" alt="">
					</div> -->
				</div>
			</div>
			<div class="col-lg-5 offset-lg-1">
				<div class="s_product_text">
					<h3>@Model.Name</h3>
					<h2>@(Model.Price?.ToString("N0") ?? "N/A")  VND</h2>
					<ul class="list">
						<li><a class="active" href="#"><span>Loại</span> : @Model.CategoryName</a></li>
						<li><a href="#"><span>Số lượng</span> : @Model.Qty</a></li>
					</ul>
					<p>
						@Model.Content
						Mill Oil is an innovative oil filled radiator with the most modern technology. If you are looking for something that can make your interior look awesome, and at the same time give you the pleasant warm feeling during the winter.
					</p>
					<div class="product_count">
						<!-- Phần chọn size -->
						<div class="size_selection" style="margin-top: 10px;">
							<label for="size">Size:</label>
							<div class="size_options" style="display: flex; gap: 10px;">
								@{
									if (!string.IsNullOrEmpty(Model.Size))
									{
										var sizes = Model.Size.Split(',').Select(s => s.Trim()).ToList();
										<form id="addToCartForm" action="/Cart/AddToCart" method="post">
											@foreach (var size in sizes)
											{
												<label class="size_box">
													<input type="radio" name="selectedSize" value="@size" required>
													<span>@size</span>
												</label>
											}
											<input type="hidden" name="productId" value="@Model.Id" />
											<input type="hidden" name="quantity" id="hiddenQty" value="1" />
										</form>
									}
									else
									{
										<p>No sizes available.</p>
									}
								}
							</div>
						</div>
						<a class="button primary-btn" href="#">Thêm vào giỏ hàng</a>
					</div>
					<div class="card_area d-flex align-items-center">
						<a class="icon_btn" href="#"><i class="lnr lnr lnr-diamond"></i></a>
						<a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
